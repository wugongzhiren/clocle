<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/help_details_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="4dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="悬赏详情" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="举报" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/help_main_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/help_details_top"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/self_info_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photodongtai_details"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/ic_launcher" />

            <RelativeLayout
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/namedongtai_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无功至人"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/timetext_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/namedongtai_details"
                    android:layout_marginTop="3dp"


                    android:text="28分钟前  安徽中医药大学"
                    android:textColor="#A39E9E"
                    android:textSize="8sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher" />
            </RelativeLayout>
        </LinearLayout>

        <!--<View
            android:id="@+id/hr"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/photodongtai"
            android:background="#686161" />-->

        <LinearLayout
            android:id="@+id/help_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/self_info_details">

            <TextView

                android:id="@+id/contextdongtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:text="111111111111111111111111111111111111111111111111111111" />

            <LinearLayout
                android:id="@+id/pinglun"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/information"
                    android:drawablePadding="10dp"
                    android:gravity="left|center_vertical"
                    android:text="评论" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="#D2D3D4">

                </View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/like_2_shape"
                    android:drawablePadding="10dp"
                    android:gravity="left|center_vertical"
                    android:text="赞" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="#D2D3D4" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:drawableLeft="@mipmap/shape_shopping"
                    android:drawablePadding="10dp"
                    android:gravity="left|center_vertical"
                    android:text="抢单" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/help_details"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="赞 89"/>
            <TextView
                android:layout_weight="1"
                android:text="评论 89"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

<RelativeLayout
    android:layout_below="@+id/help_main_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <ListView
       android:layout_width="match_parent"
       android:layout_height="match_parent">


   </ListView>

</RelativeLayout>
</RelativeLayout>