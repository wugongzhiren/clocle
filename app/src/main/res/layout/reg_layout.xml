<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <ImageView
        android:scaleType="centerCrop"
        android:padding="0dp"
        android:id="@+id/bg_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

<EditText
    android:id="@+id/name"
    android:hint="用户名"
    android:textCursorDrawable="@drawable/cusor_style"
    android:textColorHint="#C6C0C0"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    />
    <EditText
        android:layout_below="@+id/name"
        android:textColorHint="#E1D5D5"
        android:id="@+id/password"
        android:hint="密码"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:inputType="textPassword"/>
    <Button
        android:layout_below="@+id/password"
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F7DC0F"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="@color/white"/>
    <Button
        android:layout_below="@+id/login_bt"
        android:id="@+id/reg_bt"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F7DC0F"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_below="@+id/reg_bt"
        android:layout_marginTop="20dp"
        android:id="@+id/phone_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"/>


    <ProgressBar

        android:id="@+id/reg_progress"
        android:visibility="gone"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
