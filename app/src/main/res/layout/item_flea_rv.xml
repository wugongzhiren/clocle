<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:background="#FF4BE7DF"
    android:layout_width="match_parent"
    android:layout_height="68dp">
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@mipmap/t7"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/flea_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试用户名"/>
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/woman"/>
        </LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35分钟之前发布"/>
    </LinearLayout>
    <TextView
        android:id="@+id/flea_money"
        android:textColor="#FFDF2121"
       android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="560元"/>

</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/flea_rv_imgs"
        android:layout_width="wrap_content"
        android:layout_height="88dp">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:background="#FF21DF47"
        android:layout_width="match_parent"
        android:layout_height="38dp">
     <TextView
         android:textColor="#FFA8AFB4"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:text="中国科学技术大学"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="浏览525次"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12人讲价"/>
    </LinearLayout>
</LinearLayout>