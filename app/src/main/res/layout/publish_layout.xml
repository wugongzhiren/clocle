<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/publish_text"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:gravity="clip_horizontal"
        android:hint="请输入你的需求，支付佣金以让别人帮助你完成，如果没人完成，金额将退回你的余额" />

    <LinearLayout
        android:id="@+id/imgs"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/publish_text">

        <ImageView
            android:id="@+id/help_img1"
            android:layout_width="90dp"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/help_img2"
            android:layout_width="90dp"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/help_img3"
            android:layout_width="90dp"
            android:layout_height="110dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/imgs">

        <Button
            android:id="@+id/chooseimgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择图片" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/school"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/buttons"
        android:layout_margin="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="安徽中医药大学" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/moneytext"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/school">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打赏" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <EditText
            android:id="@+id/money_text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />
    </LinearLayout>

    <Button
        android:id="@+id/publish_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/moneytext"
        android:layout_margin="10dp"
        android:text="发布" />


</RelativeLayout>
